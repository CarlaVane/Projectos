{
  "compilerOptions": {
    "target": "ES6", // Define a versão do JavaScript
    "module": "ESNext", // Suporte a ESModules
    "moduleResolution": "node", // Corrige o problema de resolução de módulos
    "strict": true, // Ativa todas as verificações estritas
    "jsx": "react-jsx", // Configuração para React com TypeScript
    "esModuleInterop": true, // Permite importar módulos CommonJS como ESModules
    "resolveJsonModule": true, // Suporte para importação de JSON
    "allowSyntheticDefaultImports": true, // Permite imports padrão
    "skipLibCheck": true, // Ignora verificações de tipos em bibliotecas
    "baseUrl": "./", // Define o diretório base
    "paths": {
      "@/*": ["src/*"] // Alias para facilitar importações
    }
  },
  "include": ["src"], // Inclui a pasta 'src' para análise
  "exclude": ["node_modules"] // Exclui 'node_modules'
}
